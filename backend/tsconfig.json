{
  "compilerOptions": {
    
    "target": "ES2022",                    
    "module": "NodeNext",                   
    "lib": ["ES2022"],                      
    
  
    "rootDir": "./src",                    
    "outDir": "./dist",                     
    
   
    "strict": true,                         
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true, 
    

    "skipLibCheck": true                    
  },
  "include": ["src/**/*"],                  
  "exclude": ["node_modules"]               
}